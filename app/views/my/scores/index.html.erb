<div class="container-wrap main_private">
  <div class="container" style="height:648px">
    <div class="carousel_text">
      <h2>个人主页</h2>
    </div>
  </div>
</div>
<div class="container-wrap">
  <div class="container main-content">
    <div class="row"> 
      <!-- 右边栏-->
      <div class="main_aside fl">
        <div class="aside_box black_bg">
          <%=render "my/user_menu"%>
        </div>
      </div>
      <!-- //右边栏--> 
      <!-- 左内容-->
      <div class="main_container layout_single clearfix"> 
        <!--我的评分-->
        <div class="container_banner">
          <div class="container_date">
            <div class="container_date_all borb"><span class="title">我的评分</span></div>
          </div>
        </div>
        <div class="container_banner">
          <div class="private_score">
            <div class="container_comment">
              <div class="comment-list">
                <% current_user.game_comments.each do |c| %>
                  <div class="comment_block">
                  <div class="comment-score">
                    <% user_score = current_user.games_user_scores.where(game_id:c.game_id).first %>
                    <div class="user-score"><%=user_score.score.to_i unless user_score.nil?%></div>
                  </div>
                  <div class="comment-author"><a ><img src="<%=c.user.avatar.url%>" alt=""></a></div>
                  <div class="comment-text"><%=c.content%></div>
                  <div class="comment-about"><%= link_to '删除', c, method: :delete, data: { confirm: '确定删除?',},class: 'del'  %>评论 <a href="/games/<%=c.game.id%>"><%=c.game.name%></a>    发表于<%=c.created_at.strftime('%Y年%m月%d日')%></div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <!--//我的评分-->
        <div class="clear"></div>
      </div>
      <!-- //左内容--> 
    </div>
  </div>
</div>