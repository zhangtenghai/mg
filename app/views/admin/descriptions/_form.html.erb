<%= form_for([:admin,@description], :html => { :class => "form-horizontal" }) do |f| %>
  <div class="form-body">
    <%= f.error_messages %>
    <h4 class="form-section">基本信息</h4>
    
    <div class="form-group">
      <%= render "shared/column", name: "标题", content: f.c_text_field(:title, readonly:'readonly') %>
    </div>
    <div class="form-group">
      <label class="control-label col-md-1">内容</label>
      <div class="col-md-11">
        <%= f.cktext_area :content, :class => 'form-control' %>
      </div>
    </div>
    
  </div>

  <div class="form-actions right">
    <button type="submit" class="btn">保存</button>
  </div>
<% end %>

