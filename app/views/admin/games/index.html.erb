<% content_for :page_title do %>
<%= render "title_bar" %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="portlet box">
      <div class="dataTables_wrapper form-inline" role="grid">
        <div class="row">
          <div class="col-md-12 col-sm-12">
            <%= form_tag admin_games_url, :method => 'get' do %>
            <div class="dataTables_filter pull-left">
              <label>
                关键字:<%= text_field_tag :search, params[:search], :class => "form-control input-small" %>
              </label>
              <%= submit_tag '查询', :name => nil, :class => 'btn' %>
            </div>
            <% end %>
          </div>
        </div>
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>名称</th>
                <th>原名</th>
                <th>开发商</th>
                <th>发行商</th>
                <th>背景图</th>
                <th>游戏图</th>
                <th>列表图</th>
                <th>官网</th>
                <th>售价</th>
                <th>评级</th>
                <th>平均分</th>
                <th>发售日</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @games.each do |f| %>
                <tr>
                  <td><%=f.name %>
                  </td>
                  <td><%=f.origin_name %></td>
                  <td><%=f.developer %></td>
                  <td><%=f.publisher %></td>
                  <th><%=image_hover('背景图' ,f.head_img.url) %></th>
                  <th><%=image_hover('游戏图' ,f.avatar.url) %></th>
                  <th><%=image_hover('列表图' ,f.list_img.url) %></th>
                  <td><%=f.website %></td>
                  <td><%=f.sale_price %></td>
                  <td><%=f.rating %></td>
                  <td><%=f.avg_score %></td>
                  <td><%=f.sale_date.strftime("%y-%m-%d") %></td>
                  <td>
                    <%= link_to '编辑', edit_admin_game_path(f) %> | 
                    <%= link_to '删除', admin_game_path(f), method: :delete, data: { confirm: '确定删除?' } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @games, :theme => "admin" %>
        </div>
      </div>
    </div>
  </div>
</div>