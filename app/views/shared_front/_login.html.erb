<script type="text/javascript">
  $(document).on('submit', '#sign_in_user', function(e){

  }).on('ajax:success', '#sign_in_user', function(e, data, status, xhr) {
      if (data.success) {
        location.reload();
      }else{
        $("#msg").text('用户名或密码错误')
      };
  }).on('ajax:error', '#sign_in_user', function(e, data, status, xhr) {
      $("#msg").text('请求错误')
  });
</script>
<div id="mr-loginbox" style="display:none;" class="popbox">
  <div class="common_title clearfix"> <a href="#" class="aside_more">没有帐号？注册<span>&gt;</span></a>
    <h4>登录</h4>
    <div class="reg_tab">

      <%= form_for(resource, :as => resource_name,:url => session_path(resource_name) ,
                     :html => {:id => "sign_in_user"}, :format => :json, :remote => true ) do |f| %> 
      <table width="100%" border="0" cellspacing="0" cellpadding="0">

          <tr>
            <th scope="row">账号</th>
            <td><%= f.text_field :login, :class => "reg_input", :autocomplete =>"off", :tabindex => 1, :accesskey => 'u',:placeholder => '账号' %></td>
          </tr>
          <tr>
            <th scope="row">密码</th>
            <td> <%= f.password_field :password, :class => "reg_input", :autocomplete =>"off", :tabindex => 1, :accesskey => 'u',:placeholder => '密码' %></td>
          </tr>
          <tr>
            <th scope="row">&nbsp;</th>
            <td><span id="msg" style="color:red;"></span></td>
          </tr>
          <tr>
            <td colspan="2"><%=f.submit '登录',class:'btn-reg'%><div class="reg_tips">登录后可以收藏新闻、文章以及游戏。
发表评论、给游戏评分并且可以参与一系列网站活动。</div></td>
          </tr>
           <tr>
            <td colspan="2"><div class="disline"><span class="disline_f">or</span></div></td>
          </tr>
          <tr>
            <td colspan="2"><div class="other_login">
            <%= link_to "",  user_omniauth_authorize_path(:weibo), class: 'weibo_style' %>
            <%= link_to "",  user_omniauth_authorize_path(:qq_connect), class: 'qq_style' %>
            </div>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>


