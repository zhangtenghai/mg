<%= form_for(@article, :html => { :class => "form-horizontal" }) do |f| %>
  <div class="form-body">
    <%= f.error_messages %>
    <h4 class="form-section">基本信息</h4>
    <div class="form-group">
      <%= render "shared/column", name: "标题", content: f.c_text_field(:title) %>
      <% if current_user.is_admin %>
      <%= render "shared/column", name: "作者", content: f.collection_select(:user_id,User.editors,:id,:name,{:include_blank => true,:selected => current_user.id}, {:class => 'form-control select2me'}) %>
      <% end %>
      <%= render "shared/column", name: "类别", content: f.collection_select(:category_id,Category.all,:id,:name,{}, {:class => 'form-control select2me'}) %>
    </div>
     <div class="form-group">
      <%= render "shared/column", name: "游戏", content: f.collection_select(:game_id,Game.all,:id,:name,{:include_blank => true}, {:class => 'form-control select2me'}) %>
    </div>
    <div class="form-group">
      <label class="control-label col-md-1">引用</label>
      <div class="col-md-11">
        <%= f.text_area(:quote, :class => "form-control") %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-1">内容</label>
      <div class="col-md-11">
        <%= f.text_area(:content, :class => "form-control") %>
      </div>
    </div>
    
  </div>

  <div class="form-actions right">
    <button type="submit" class="btn">保存</button>
  </div>
<% end %>

