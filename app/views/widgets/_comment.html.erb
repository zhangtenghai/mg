<div class="comment_block">
  <div class="comment-score">
    <% game_score = comment.user.games_user_scores.where(game_id:comment.game_id).first%>
    <div class="user-score"><%=game_score.score.to_i if game_score %></div>
  </div>
  <div class="comment-author"><a href="/users?user_name=<%=comment.user.pet_name%>"><img src="<%=comment.user.avatar.url%>" alt=""></a></div>
  <div class="comment-text"><%=comment.content%></div>
  <div class="comment-about"><a href="#comment-list" class="reply">回复</a><a href="/users?user_name=<%=comment.user.pet_name%>"><%=comment.user.pet_name%></a><%="(#{comment.user.signature})"  unless comment.user.signature.nil?%> 发表于<%=comment.created_at.strftime('%Y年%m月%d日')%></div>
</div>
